<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body class="bg-gradient-to-r from-indigo-500">
    <main class="w-8/12 mx-auto h-screen flex flex-col justify-center items-center">
        <form method="post" class="relative flex flex-col items-center gap-5 w-1/3 px-8 py-10 rounded backdrop-blur-lg bg-white/30">
            <h1 class="text-4xl font-semibold text-gray-700 mb-5">Giriş Yap</h1>
            <input type="text" name="username" id="username" class="border py-2 rounded px-3 outline-none text-sm text-gray-500 w-full" placeholder="Kullanıcı Adı" required>
            <input type="password" name="password" id="password" class="border py-2 rounded px-3 outline-none text-sm text-gray-500 w-full" placeholder="Şifre" required>
            <button type="submit" class="border px-8 py-2 rounded font-semibold hover:bg-white transition-all">Giriş Yap</button>
            <%- include('./partials/message.ejs') %>
        </form>
    </main>
</body>
</html>