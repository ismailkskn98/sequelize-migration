

<% if(totalPages > 1) { %>
  <nav class="inline-flex -space-x-px rounded-md shadow-sm self-start mt-5" aria-label="Pagination">
  <a
    href="<% if(!(currentPage == 0)) { %>
      ?page=<%= (currentPage - 1) %>
    <% } %>"
    class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 border <%= currentPage == 0 ? 'cursor-not-allowed' : 'cursor-pointer hover:bg-gray-50' %>"
  >
    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path
        fill-rule="evenodd"
        d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z"
        clip-rule="evenodd"
      />
    </svg>
  </a>
  <% for(let i = 0; i < totalPages; i ++) { %>
    <a
    href="?page=<%= i %>"
    aria-current="page"
    class="relative z-10 inline-flex items-center px-4 py-2 text-sm font-semibold border
    <%= currentPage == i ? 'bg-[#1f2937] text-white border-none' : ''  %>
    "><%= (i + 1) %></a>
  <% } %>

  <a
    href="<% if(!((currentPage + 1) == totalPages)) { %>
      ?page=<%= (currentPage + 1) %>
    <% } %>"
    class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 border <%= (currentPage + 1) == totalPages ? 'cursor-not-allowed' : 'cursor-pointer hover:bg-gray-50' %>"
  >
    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
      <path
        fill-rule="evenodd"
        d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
        clip-rule="evenodd"
      />
    </svg>
  </a>
</nav>
<% } %>
