          <% if (isAuth) { %>     
            <a href="/account/logout" class="underline">Logout</a>
            <span><%= username %></span>
          <% } else { %>
            <a href="/account/login" class="underline">Login</a> / 
            <a href="/account/register" class="underline">Register</a>
            <% } %>
        </div>
    </nav>
  </div>
</header>
